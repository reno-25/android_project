<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Event Image -->
    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Event Name -->
    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <!-- Event Date -->
    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <!-- Event Description -->
    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <!-- Horizontal layout for Join Button, Show QR Code Button, and More Options Button -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start">

        <!-- Join Event Button (MaterialButton) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/joinEventButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Join Event"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            />

        <!-- Show QR Code Button (MaterialButton) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/showQrCodeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show QR Code"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:visibility="gone" /> <!-- Initially hidden -->

        <!-- More Options Button -->
        <ImageButton
            android:id="@+id/moreOptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_more"
            android:contentDescription="More Options"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>
