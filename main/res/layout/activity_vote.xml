<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Vote Title TextView -->
    <TextView
        android:id="@+id/voteTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView for the Options -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/optionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Submit Vote Button -->
    <Button
        android:id="@+id/submitVoteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Vote"
        android:textColor="@android:color/white"
        android:background="@color/black"/>

    <!-- Create Vote Button -->
    <Button
        android:id="@+id/createVoteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Vote"
        android:textColor="@android:color/white"
        android:background="@color/black"
        android:layout_marginTop="16dp" />
</LinearLayout>
